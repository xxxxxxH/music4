<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="60dp"
    android:layout_alignParentBottom="true"
    android:background="@mipmap/main14"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/main15"
        android:gravity="center"
        android:text="Home"
        android:textColor="#FA233B"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/singer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/main16"
        android:gravity="center"
        android:text="Singer"
        android:textColor="#A9AAAA"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/local"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/main17"
        android:gravity="center"
        android:text="Local music"
        android:textColor="#A9AAAA"
        android:textSize="9sp" />
</LinearLayout>